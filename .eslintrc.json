{
    "env": {
        "browser": true,
        "es6": true,
	"amd": true,
	"node": true,
	"mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
	"linebreak-style": ["error", "unix"],
	"semi": ["error", "always"],
	"no-extra-parens": ["error", "all"],
	"consistent-return": "error",
	"no-shadow": "error",
	"no-unused-vars": ["error", { "vars": "local",
				      "args": "none"}
			  ]
    }
}
